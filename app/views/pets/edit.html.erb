<div class="container-fluid my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card p-3">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <h2 class="heading text-center center" style="color: rgb(40,40,40);">edit pet profile:</h2>
                    </div>
                </div>
                <%= simple_form_for(@pet) do |f| %>
                    <%= f.input :animal_type %>
                        <%= f.input :name %>
                            <%= f.input :age %>
                                <%= f.input :description %>
                                    <%= f.input :photo, as: :file %>
                                        <%= f.submit "Edite meu pet", class: "btn btn-success" %>
                                            <% end %>
            </div>
        </div>
    </div>
</div>
